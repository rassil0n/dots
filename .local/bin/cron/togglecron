#!/bin/sh

CRONFILE=$HOME/.config/cronjobs


case $1 in
	-d)
		crontab -l > $CRONFILE
		crontab -r
		notify-send "ğŸ•“ Cronjobs saved and disabled."
		;;
	-e)
		if [ ! -f $CRONFILE ];then
			notify-send -u critical "â—No cronfile found"
		else
			crontab - < $CRONFILE
			notify-send  "ğŸ•“ Cronjobs re-enabled."
		fi
		;;
	*)
		echo "Wrong option!"
esac
