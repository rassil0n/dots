#{{{ ENVIRONMENT
snippet begin
alias   \begin
	\begin{${1:#:type}}
		${2:TARGET}
	\end{$1}

snippet figure
alias   \begin{figure} \figure
	\begin{figure}[${1}]
		\centering
		\includegraphics[${2:width=${3\}}]{${4}}
		\caption{${5}}
		\label{${6}}
	\end{figure}

snippet lstlisting
abbr    create new lst-environment
alias   listing
options head
    \begin{lstlisting}[name = ${1}, caption=\lstname, language=${2}]
        ${3}
    \end{lstlisting}

snippet lstinputlisting
abbr    import source-code
alias   inputlist
options head
    \lstinputlisting[name=${1}, caption=\lstname, language=${2}]{${3:sourcefile}}
#}}}
#{{{ OTHERS
snippet \usepackage
