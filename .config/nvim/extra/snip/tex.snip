#{{{ META
snippet \newpage
abbr    Create a new page
alias   np
options head
        \newpage
        ${1}

snippet bigskip
abbr    Create a bigskip
alias   bs
options head
        \bigskip

snippet tableofcontents
abbr    Create table of contents
alias   toc
options head
        \tableofcontents

snippet listoffigures
abbr    Create list of figures
alias   lof
options head
        \listoffigures
#}}}
#{{{ STRUCTURE
snippet \part
alias   part
options head
        \part{${1:PART}}
        \label{part:$1}}
        ${0}

snippet \section
abbr    Create a Section
alias   sec
options head
        \section{${1:SECTION}}
        \label{sec:$1}
        ${0}

snippet \subsection
abbr    Create a SubSection
alias   ssec
options head
        \subsection{${1:SUBSECTION}}
        \label{ssec:$1}
        ${0}

snippet \subsubsection
abbr    Create a SubSubSection
alias   sssec
options head
        \subsection{${1:SUBSUBSECTION}}
        \label{sssec:$1}
        ${0}

#}}}
#{{{ LISTS

snippet \itemize
abbr    Create a bulleted list
alias   item
options head
        \begin{itemize}
                \item ${1}
        \end{itemize}

snippet \enumerate
abbr    Create a orderd list
alias   enum
options head
        \begin{enumerate}
                \item ${1}
        \end{enumerate}

snippet \description
abbr    Create a Description
alias   desc
options head
        \begin{description}
                \item[${1}] ${0}
        \end{description}

snippet i
abbr    Add a item to a list
options head
        \item ${1}
#}}}
