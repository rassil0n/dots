# vim: filetype=conf

# navigation
def_key "G"
	move_end
def_key "g"
	move_home
def_key "j"
    scroll_down
def_key "k"
	scroll_up
def_key "h"
    previous_column
def_key "l"
	next_column

# change views
def_key "E"
	show_playlist_editor
def_key "T"
	show_tag_editor
def_key "M"
	show_media_library
def_key "U"
	update_database
def_key "P"
	show_playlist
def_key "S"
	show_search_engine
def_key "F"
	show_browser
def_key "Z"
	show_lyrics

# toggle modes
def_key "m"
	toggle_media_library_columns_mode

def_key "x"
	delete_playlist_items
def_key "t"
 toggle_library_tag_type
