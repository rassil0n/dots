#!/bin/sh

# get memory/swap
mem=$(free -h | awk '$1~/Mem/{print $3}')
swap=$(free -h | awk '$1~/Swap/{print $3}')

# create output
if [ "${swap}" = "0" ] || [ "${swap}" = "0B" ] || [ "${swap}" = "0,0Ki" ]; then
        echo "[ ðŸ§ ${mem} ]" | tr -d i
else 	echo "[ ${mem}"\|\|"${swap} ]" |tr -d i; fi
